<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="DialogAnimation">
    <item name="android:windowEnterAnimation">@anim/anim_dialog_enter_window</item>
    <item name="android:windowExitAnimation">@anim/anim_dialog_exit_window</item>
  </style>

  <style name="AbstractDialog" parent="Theme.AppCompat.Light.Dialog">
    <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    <item name="android:background">@android:color/white</item>
    <item name="android:textColorPrimary">@color/textPrimaryColor</item>
    <item name="android:textColorSecondary">@color/textSecondaryColor</item>
    <item name="android:textColorHint">@color/hint_disabledTextColor</item>
    <item name="android:radius">4dp</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:backgroundDimEnabled">false</item>
    <item name="android:windowFrame">@null</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowContentOverlay">@null</item>
  </style>

  <style name="DialogTheme" parent="AbstractDialog" />

  <color name="textPrimaryColor">#212121</color>
  <color name="textSecondaryColor">#757575</color>
  <color name="hint_disabledTextColor">#9E9E9E</color>
</resources>